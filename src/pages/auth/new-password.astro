---
import ModalFilter from "../../components/ModalFilter.astro";
import ProductCard from "../../components/ProductCard.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Beranda â€¢ Toko Online">
    <main class="bg-gray-100">
        <div class="flex flex-col items-center justify-center px-6 py-16 mx-auto pt:mt-0">
          <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg border ">
            <div>
                <h2 class="text-2xl  uppercase font-bold text-gray-900">
                    Buat Kata sandi baru
                </h2>
                <p class="text-gray-600 mb-6 text-sm">
                    Lengkapi formulir berikut untuk membuat kata sandi baru anda.
                </p>
            </div>
        
            
            <div
              class="bg-blue-50 border border-blue-200 text-sm text-blue-600 rounded-md p-4"
              role="alert">
              Pesan akan ditampilkan di sini.
            </div>
            
            <form class="mt-8 space-y-6" method="post" novalidate>
        
              <!-- Password -->
              <div>
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900 ">
                    Password
                </label>
        
                <input type="password" name="password"
                  class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                        
                <p class="mt-2 text-sm text-red-600 ">
                  Kata sandi harus diisi
                </p>
              </div>
        
              <!-- Konfirmasi Password -->
              <div>
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900 ">
                    Konfirmasi Password
                </label>
        
                <input type="password" name="password"
                  class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                        
                <p class="mt-2 text-sm text-red-600 ">
                  Konfirmasi Kata sandi harus diisi
                </p>
              </div>
        
              <button type="submit"
                class="block w-full py-2 text-center text-white bg-blue-500 border border-blue-400 rounded hover:bg-transparent hover:text-blue-500 transition uppercase font-roboto font-medium">
                Simpan
              </button>
            </form>
          </div>
          <a href="/"
            class="mx-1 px-5 py-4 cursor-pointer font-normal text-sm text-gray-500 focus:outline-none hover:text-gray-800 focus:text-gray-800">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
              class="w-4 h-4 inline-block align-text-top">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18">
              </path>
            </svg>
            <span class="inline-block ml-1">Kembali ke beranda</span>
          </a>
        </div>
    </main>
</Layout>