---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../account/partials/sidebar.astro";
---

<Layout title="Beranda â€¢ Toko Online">
    <main class="bg-gray-100">
        <div
            class="flex flex-col max-w-screen-xl mx-auto lg:grid grid-cols-12 items-start gap-6 pt-8 pb-16 px-4 lg:px-0"
        >
            <Sidebar />

            <div
                class="col-span-9 border bg-white rounded px-6 pt-5 pb-7 mt-6 lg:mt-0"
            >
                <h3 class="text-lg font-medium capitalize mb-4">
                    Ganti Kata Sandi
                </h3>
                <div
                    class="bg-blue-50 border border-green-200 text-sm text-green-600 rounded-md p-4"
                    role="alert"
                >
                    Kata sandi anda berhasil diperbarui
                </div>
                <form method="post" novalidate class="mt-6">
                    <div class="space-y-4 w-full">
                        <div>
                            <label
                                for="old_password"
                                class="block mb-2 text-sm font-medium text-gray-900"
                            >
                                Kata sandi lama
                            </label>

                            <input
                                type="password"
                                name="old_password"
                                autofocus
                                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                            />

                            <p class="mt-2 text-sm text-red-600">
                                Kata sandi lama harus diisi
                            </p>
                        </div>
                        <div>
                            <label
                                for="new_password"
                                class="block mb-2 text-sm font-medium text-gray-900"
                            >
                                Kata sandi baru
                            </label>

                            <input
                                type="password"
                                name="new_password"
                                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                            />

                            <p class="mt-2 text-sm text-red-600">
                                Kata sandi baru harus diisi
                            </p>
                        </div>
                        <div>
                            <label
                                for="confirm_new_password"
                                class="block mb-2 text-sm font-medium text-gray-900"
                            >
                                Konfirmasi Kata sandi baru
                            </label>

                            <input
                                type="password"
                                name="confirm_new_password"
                                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                            />

                            <p class="mt-2 text-sm text-red-600">
                                Konfirmasi Kata sandi baru harus diisi
                            </p>
                        </div>
                    </div>
                    <div class="mt-6">
                        <button
                            type="submit"
                            class="px-6 py-2 text-center text-white bg-blue-500 border border-blue-400 rounded hover:bg-transparent hover:text-blue-500 transition font-medium"
                        >
                            Simpan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</Layout>
