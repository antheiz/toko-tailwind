---
import CategoryCard from "../components/CategoryCard.astro";
import ProductCard from "../components/ProductCard.astro";
import ProductCart from "../components/ProductCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Beranda â€¢ Toko Online">
	<main class="bg-gray-100">
		<div class="relative">
			<img
				src="assets/bg-banner.jpg"
				class="absolute inset-0 h-full w-full object-cover"
				alt=""
			/>
			<div class="relative bg-gray-600 bg-opacity-40">
				<div
					class="mx-auto px-4 py-16 sm:max-w-xl md:max-w-full md:px-24 lg:max-w-screen-xl lg:px-8 lg:py-24"
				>
					<div class="mb-16 flex flex-col sm:mb-0 sm:text-center">
						<div
							class="mb-10 max-w-xl sm:text-center md:mx-auto md:mb-12 lg:max-w-2xl"
						>
							<h2
								class="mb-6 max-w-lg font-sans text-3xl font-bold leading-none tracking-tight text-white sm:text-4xl md:mx-auto"
							>
								<span class="relative inline-block">
									<svg
										viewBox="0 0 52 24"
										fill="currentColor"
										class="text-blue-gray-100 absolute left-0 top-0 z-0 -ml-20 -mt-8 hidden w-32 sm:block lg:-ml-28 lg:-mt-10 lg:w-32"
									>
										<defs>
											<pattern
												id="e77df901-b9d7-4b9b-822e-16b2d410795b"
												x="0"
												y="0"
												width=".135"
												height=".30"
											>
												<circle cx="1" cy="1" r=".7"
												></circle>
											</pattern>
										</defs>
										<rect
											fill="url(#e77df901-b9d7-4b9b-822e-16b2d410795b)"
											width="52"
											height="24"></rect>
									</svg>
									<span class="relative">Best</span>
								</span>
								 Collection For Home Decoration
							</h2>
							<p class="text-base text-white md:text-lg">
								Sed ut perspiciatis unde omnis iste natus error
								sit voluptatem accusantium doloremque rem
								aperiam, eaque ipsa quae.
							</p>
						</div>
						<div>
							<a
								class="from-blue-600 hover:shadow-blue-700/50 focus:ring-blue-600 inline-flex items-center justify-center gap-x-3 rounded-full border border-transparent bg-gradient-to-tl to-violet-600 px-6 py-3 text-center text-sm font-medium text-white shadow-lg shadow-transparent focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white dark:focus:ring-offset-gray-800"
								href="/shop"
							>
								Belanja sekarang
								<svg
									class="h-2.5 w-2.5"
									width="16"
									height="16"
									viewBox="0 0 16 16"
									fill="none"
								>
									<path
										d="M5.27921 2L10.9257 7.64645C11.1209 7.84171 11.1209 8.15829 10.9257 8.35355L5.27921 14"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="mx-auto flex max-w-screen-xl flex-col px-4 py-16 xl:px-0">
			<div class="flex justify-between pb-4">
				<h2 class="text-2xl font-medium uppercase text-gray-800">
					Belanja sesuai Kategori
				</h2>
				<a
					href="/category"
					class="font-inter inline-flex shrink-0 items-center gap-2 text-sm text-gray-600 hover:text-gray-700 hover:underline sm:px-5"
				>
					Lihat semua Kategori

					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-4 w-4 rtl:rotate-180"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M14 5l7 7m0 0l-7 7m7-7H3"
						>
						</path>
					</svg>
				</a>
			</div>
			<div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
				<CategoryCard/>
			</div>
		</div>

		<div class="mx-auto flex max-w-screen-xl px-4 py-8 xl:px-0">
			<a href="#">
				<img
					src="assets/offer.jpg"
					class="w-full"
				/>
			</a>
		</div>

		<div class="mx-auto flex max-w-screen-xl flex-col px-4 py-16 xl:px-0">
			<div class="flex justify-between pb-4">
				<h2 class="text-2xl font-medium uppercase text-gray-800">
					Rekomendasi untuk Kamu
				</h2>
				<a
					href="#"
					class="font-inter inline-flex shrink-0 items-center gap-2 text-sm text-gray-600 hover:text-gray-700 hover:underline sm:px-5"
				>
					Lihat semua Produk

					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-4 w-4 rtl:rotate-180"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M14 5l7 7m0 0l-7 7m7-7H3"
						>
						</path>
					</svg>
				</a>
			</div>
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<ProductCard/>
			</div>
		</div>
	</main>
</Layout>
