---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../account/partials/sidebar.astro";
---

<Layout title="Beranda â€¢ Toko Online">
    <main class="bg-gray-100">
        <div
            class="flex flex-col max-w-screen-xl mx-auto lg:grid grid-cols-12 items-start gap-6 pt-8 pb-16 px-4 lg:px-0"
        >
            <Sidebar />

            <div
                class="col-span-9 border bg-white rounded px-6 pt-5 pb-7 mt-6 lg:mt-0"
            >
            <h3 class="text-lg font-medium capitalize">
                Daftar Transaksi
            </h3>
                <div
                    class="bg-green-50 border border-blue-200 text-sm text-blue-600 rounded-md p-4 my-4"
                    role="alert"
                >
                    Transaksi ini telah lunas, silahkan buat transaksi baru.
                </div>
                <div class="max-w-[85rem] py-3 mx-auto">
                    <div
                        class="flex items-center md:justify-between gap-4 md:gap-6 p-4 border border-gray-200 rounded flex-wrap md:flex-nowrap">
        
                        <div class="w-28 flex-shrink-0">
                            <a href="/product">
                                <img src="/assets/product-default.jpg" class="w-full">
                            </a>
                        </div>
                        <div class="md:w-1/2 w-full">
                            <a href="/product"
                                class="text-gray-800 mb-1 font-medium truncate hover:underline">
                                Produk 1
                            </a>
                            <p class="text-gray-500 text-sm">
                                2 barang x Rp50.000
                            </p>
                        </div>
                        <div class="md:w-1/3 w-full">
                            <p class="text-gray-500 text-sm">
                                20 November 2023 11:14 p.m
                            </p>
                            <p class="text-gray-500 text-sm">Status: <span class="text-blue-600">
                                    Menunggu Pembayaran
                                </span>
                            </p>
                        </div>
                        <div class="flex flex-col gap-1">
                            <p class="text-sm">Total Belanja</p>
                            <p class="text-primary-400 font-medium">Rp100.000</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
