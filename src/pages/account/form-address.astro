---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../account/partials/sidebar.astro";
---

<Layout title="Beranda â€¢ Toko Online">
    <main class="bg-gray-100">
        <div
            class="flex flex-col max-w-screen-xl mx-auto lg:grid grid-cols-12 items-start gap-6 pt-8 pb-16 px-4 lg:px-0"
        >
            <Sidebar />

            <div
                class="col-span-9 border bg-white rounded px-6 pt-5 pb-7 mt-6 lg:mt-0"
            >
                <div class="flex justify-between">
                    <a
                        class="inline-flex items-center gap-x-1.5 text-sm text-gray-600 decoration-2 hover:underline"
                        href="/account/address"
                    >
                        <svg
                            class="flex-shrink-0 w-4 h-4"
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="m15 18-6-6 6-6"></path>
                        </svg>
                         Kembali
                    </a>
                    <h3 class="text-lg font-medium capitalize">
                        Buat Alamat Baru
                    </h3>
                </div>
                <form
                    method="post"
                    enctype="multipart/form-data"
                    novalidate
                    class="mt-6"
                >
                    <div class="space-y-4">
                        <h3 class="font-medium capitalize">
                            Informasi Penerima
                        </h3>
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="first_name"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Nama Depan
                                </label>

                                <input
                                    type="text"
                                    name="first_name"
                                    autofocus
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Nama depan harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="last_name"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Nama Belakang
                                </label>

                                <input
                                    type="text"
                                    name="last_name"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Nama belakang harus diisi
                                </p>
                            </div>
                        </div>
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="email"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Email
                                </label>

                                <input
                                    type="email"
                                    name="email"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Email harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="phone"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Nomor HP
                                </label>

                                <input
                                    type="text"
                                    name="phone"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Nomor HP harus diisi
                                </p>
                            </div>
                        </div>
                        <h3 class="font-medium capitalize">Informasi Alamat</h3>
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="province"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Provinsi
                                </label>

                                <input
                                    type="text"
                                    name="province"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Provinsi harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="city"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Kota
                                </label>

                                <input
                                    type="text"
                                    name="city"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Kota harus diisi
                                </p>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="postal_code"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Kode Pos
                                </label>

                                <input
                                    type="text"
                                    name="postal_code"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Kode pos harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="address_type"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Label Alamat
                                </label>

                                <select
                                    name="address_type"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                    id=""
                                >
                                    <option value="">Asrama</option>
                                    <option value="">Rumah</option>
                                    <option value="">Kantor</option>
                                </select>

                                <p class="mt-2 text-sm text-red-600">
                                    Label Alamat harus diisi
                                </p>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 gap-4">
                            <div>
                                <label
                                    for="address_line"
                                    class="block mb-2 text-sm text-gray-900"
                                >
                                    Alamat Lengkap
                                </label>

                                <textarea
                                    rows="3"
                                    name="address_line"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                ></textarea>
                            </div>

                            <p class="mb-4 text-sm text-red-600">
                                Alamat lengkap harus diisi
                            </p>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 gap-4">
                        <div>
                            <input
                                type="checkbox"
                                class="shrink-0 mt-0.5 border-gray-200 rounded text-blue-600 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                                id="is_active"
                            />
                            <label for="is_active" class="text-gray-900 ms-3"
                                >Jadikan alamat utama</label
                            >

                            <p class="mt-2 text-sm text-red-600">
                                Setidaknya harus ada satu alamat aktif.
                            </p>
                        </div>
                    </div>
                    <div class="flex gap-6 justify-between mt-6">
                        <button
                            type="submit"
                            class="px-6 py-2 text-center text-white bg-blue-500 border border-blue-400 rounded hover:bg-transparent hover:text-blue-500 transition font-medium"
                        >
                            Simpan
                        </button>
                        <a
                            class="inline-flex items-center gap-2 rounded border border-red-400 bg-red-400 px-2 py-2 text-white hover:bg-transparent hover:text-red-400 focus:outline-none focus:ring active:text-red-500"
                            href="#"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                viewBox="0 0 24 24"
                            >
                                <path fill="currentColor" d="M5 13v-2h14v2H5Z"
                                ></path>
                            </svg>

                            <span class="text-sm font-medium">
                                Hapus Alamat
                            </span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</Layout>
