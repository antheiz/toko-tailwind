---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../account/partials/sidebar.astro";
---

<Layout title="Beranda â€¢ Toko Online">
    <main class="bg-gray-100">
        <div
            class="flex flex-col max-w-screen-xl mx-auto lg:grid grid-cols-12 items-start gap-6 pt-8 pb-16 px-4 lg:px-0"
        >
            <Sidebar />

            <div
                class="col-span-9 border bg-white rounded px-6 pt-5 pb-7 mt-6 lg:mt-0"
            >
                <h3 class="text-lg font-medium capitalize">Biodata Diri</h3>
                <div
                    class="bg-green-50 border border-green-200 text-sm text-green-600 rounded-md p-4 my-4"
                    role="alert"
                >
                    Profil anda berhasil diperbarui
                </div>
                <form
                    method="post"
                    enctype="multipart/form-data"
                    novalidate
                    class="mt-6"
                >
                    <div class="space-y-4">
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="first_name"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Nama Depan
                                </label>

                                <input
                                    type="text"
                                    name="first_name"
                                    autofocus
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Nama depan harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="last_name"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Nama Belakang
                                </label>

                                <input
                                    type="text"
                                    name="last_name"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Nama belakang harus diisi
                                </p>
                            </div>
                        </div>
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="email"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Email
                                </label>

                                <input
                                    type="email"
                                    name="email"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Email harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="username"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Username
                                </label>

                                <input
                                    type="text"
                                    name="username"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Username harus diisi
                                </p>
                            </div>
                        </div>
                        <div class="grid sm:grid-cols-3 gap-4">
                            <div>
                                <label
                                    for="date_of_birth"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Tanggal Lahir
                                </label>

                                <input
                                    type="date"
                                    name="date_of_birth"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Tanggal lahir harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="phone"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Nomor HP
                                </label>

                                <input
                                    type="text"
                                    name="phone"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Nomor HP harus diisi
                                </p>
                            </div>
                            <div>
                                <label
                                    for="gender"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Jenis Kelamin
                                </label>

                                <select
                                    name="gender"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                    id=""
                                >
                                    <option value="">Pria</option>
                                    <option value="">Wanita</option>
                                </select>

                                <p class="mt-2 text-sm text-red-600">
                                    Jenis kelamin harus dipilih
                                </p>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 gap-4">
                            <div>
                                <label
                                    for="photo"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                >
                                    Foto Profil
                                </label>

                                <input
                                    type="file"
                                    name="photo"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <p class="mt-2 text-sm text-red-600">
                                    Sistem hanya menerima foto dengan ekstensi
                                    .jpg
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-6">
                        <button
                            type="submit"
                            class="px-6 py-2 text-center text-white bg-blue-500 border border-blue-400 rounded hover:bg-transparent hover:text-blue-500 transition font-medium"
                        >
                            Simpan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</Layout>
